platform :ios, '8.0'
use_frameworks!

source 'https://github.com/CocoaPods/Specs.git'

def shared_pods
    
    pod 'TapAdditionsKit/CoreGraphics/CGPoint'
    pod 'TapAdditionsKit/CoreGraphics/CGRect'
    pod 'TapAdditionsKit/CoreGraphics/CGSize'
    pod 'TapAdditionsKit/SwiftStandartLibrary/Comparable'
    pod 'TapAdditionsKit/SwiftStandartLibrary/MemoryLayout'
    pod 'TapAdditionsKit/SwiftStandartLibrary/String'
    pod 'TapAdditionsKit/Tap/Triangle'
    pod 'TapAdditionsKit/UIKit/UIColor'
    pod 'TapAdditionsKit/UIKit/UIView'
    
end

target 'TapGLKit' do
    
    shared_pods

end

target 'TapGLKitExample' do
    
    shared_pods
    
end
